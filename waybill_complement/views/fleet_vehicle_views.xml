<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_fleet_vehicle_form_inherit_fleet" model="ir.ui.view">
        <field name="name">inherited.fleet.vehicle.wc.view.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Waybill Complement">
                    <group>
                        <field name="sct_permit_number" />
                        <field name="sct_permit" />
                        <field name="vehicle_configuration" />
                        <field name="trailer_subtype" />
                        <field name="rented" />
                        <field name="tenant" attrs="{'invisible': [('rented', '=', False)]}" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
