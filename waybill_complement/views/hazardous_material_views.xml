<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hazardous_material_view_tree" model="ir.ui.view">
        <field name="name">l10n_mx_edi.hazardous.material.tree</field>
        <field name="model">l10n_mx_edi.hazardous.material</field>
        <field name="arch" type="xml">
            <tree string="Hazardous Materials">
                <field name="code"/>
                <field name="name"/>
                <field name="packaging"/>
            </tree>
        </field>
    </record>

    <record id="hazardous_material_view_form" model="ir.ui.view">
        <field name="name">l10n_mx_edi.hazardous.material.form</field>
        <field name="model">l10n_mx_edi.hazardous.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Hazardous Material">
                    <group>
                        <group string="Hazardous Material">
                            <field name="code"/>
                            <field name="name"/>
                            <field name="packaging"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hazardous_material_action" model="ir.actions.act_window">
        <field name="name">Hazardous Materials</field>
        <field name="res_model">l10n_mx_edi.hazardous.material</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first hazardous material.</p>
        </field>
    </record>
</odoo>
