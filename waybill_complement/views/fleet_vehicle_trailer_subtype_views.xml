<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_vehicle_trailer_subtype_view_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.trailer.subtype.tree</field>
        <field name="model">fleet.vehicle.trailer.subtype</field>
        <field name="arch" type="xml">
            <tree string="Trailer Subtype">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="fleet_vehicle_trailer_subtype_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.trailer.subtype.form</field>
        <field name="model">fleet.vehicle.trailer.subtype</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Trailer Subtype">
                    <group>
                        <group string="Trailer Subtype">
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_vehicle_trailer_subtype_action" model="ir.actions.act_window">
        <field name="name">Trailer Subtypes</field>
        <field name="res_model">fleet.vehicle.trailer.subtype</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Crear el primer Subtipo Remolque.</p>
        </field>
    </record>
</odoo>
