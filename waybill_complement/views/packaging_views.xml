<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="packaging_view_tree" model="ir.ui.view">
        <field name="name">l10n_mx_edi.packaging.tree</field>
        <field name="model">l10n_mx_edi.packaging</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Packaging">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="packaging_view_form" model="ir.ui.view">
        <field name="name">l10n_mx_edi.packaging.form</field>
        <field name="model">l10n_mx_edi.packaging</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Packaging">
                    <group>
                        <group string="Packaging">
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="packaging_action" model="ir.actions.act_window">
        <field name="name">Packaging</field>
        <field name="res_model">l10n_mx_edi.packaging</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first packaging.</p>
        </field>
    </record>
</odoo>
