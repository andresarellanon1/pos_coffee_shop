<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sat_merchandise_code_view_tree" model="ir.ui.view">
        <field name="name">l10n_mx_edi.sat.merchandise.code.tree</field>
        <field name="model">l10n_mx_edi.sat.merchandise.code</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="SAT Merchandise Codes">
                <field name="code"/>
                <field name="name"/>
                <field name="hazardous_material"/>
            </tree>
        </field>
    </record>

    <record id="sat_merchandise_code_view_form" model="ir.ui.view">
        <field name="name">l10n_mx_edi.sat.merchandise.code.form</field>
        <field name="model">l10n_mx_edi.sat.merchandise.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="SAT Merchandise Code">
                    <group>
                        <group string="SAT Merchandise Code">
                            <field name="code"/>
                            <field name="name"/>
                            <field name="hazardous_material"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sat_merchandise_code_action" model="ir.actions.act_window">
        <field name="name">SAT Merchandise Codes</field>
        <field name="res_model">l10n_mx_edi.sat.merchandise.code</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first SAT merchandise code.</p>
        </field>
    </record>
</odoo>
