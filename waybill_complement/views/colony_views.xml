<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="colony_view_tree" model="ir.ui.view">
        <field name="name">l10n_mx_edi.colony.tree</field>
        <field name="model">l10n_mx_edi.colony</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Colonies">
                <field name="name"/>
                <field name="colony_code"/>
                <field name="colony_postal_code"/>
            </tree>
        </field>
    </record>

    <record id="colony_view_form" model="ir.ui.view">
        <field name="name">l10n_mx_edi.colony.form</field>
        <field name="model">l10n_mx_edi.colony</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Colony">
                    <group>
                        <group string="Colony">
                            <field name="name"/>
                            <field name="colony_code"/>
                            <field name="colony_postal_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="colony_action" model="ir.actions.act_window">
        <field name="name">Colonies</field>
        <field name="res_model">l10n_mx_edi.colony</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first colony.</p>
        </field>
    </record>
</odoo>
