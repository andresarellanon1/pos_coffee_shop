<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="postal_code_view_tree" model="ir.ui.view">
        <field name="name">l10n_mx_edi.postal.code.tree</field>
        <field name="model">l10n_mx_edi.postal.code</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Postal Codes">
                <field name="name"/>
                <field name="state_code"/>
            </tree>
        </field>
    </record>

    <record id="postal_code_view_form" model="ir.ui.view">
        <field name="name">l10n_mx_edi.postal.code.form</field>
        <field name="model">l10n_mx_edi.postal.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Postal Code">
                    <group>
                        <group string="Postal Code">
                            <field name="name"/>
                            <field name="state_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="postal_code_action" model="ir.actions.act_window">
        <field name="name">Postal Codes</field>
        <field name="res_model">l10n_mx_edi.postal.code</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first postal code.</p>
        </field>
    </record>
</odoo>
