<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="travel_instructions_letter_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="lang" t-value="doc.operating_unit_id.partner_id.lang"/>
                <t t-call="tms.travel_instructions_letter_body_template" t-lang="lang"/>
            </t>
        </t>
    </template>

    <template id="travel_instructions_letter_header_template">
        <div class="row">
            <div class="col-12">
                <div class="panel">
                    <div class="panel-heading" t-att-style="Panel_Header">
                        <p style="margin-top: 4%; text-align:center; font-size:30px; font-family: monospace; font-weight:bold; color:#333 !important">LETTER OF INSTRUCTIONS:
                            <span t-field="partner_waybills.partner_id.name"/>
                        </p>
                    </div>
                </div>

                <table class="table table-striped" style="text-align: center;">
                    <tr>
                        <td>
                            <strong>Unit:</strong>
                        </td>
                        <td>
                            <span t-field="doc.unit_id"/>
                        </td>
                        <td>
                            <strong>Trailer:</strong>
                        </td>
                        <td>
                            <span t-field="doc.trailer1_id"/>
                        </td>
                        <td>
                            <strong>Driver:</strong>
                        </td>
                        <td>
                            <span t-field="doc.employee_id"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Waybill:</strong>
                        </td>
                        <td>
                            <span t-field="doc.waybill_ids.name"/>
                        </td>
                        <td>
                            <strong>Departure Date:</strong>
                        </td>
                        <td>
                            <span t-field="doc.date_start"/>
                        </td>
                        <td>
                            <strong>Deliver Date:</strong>
                        </td>
                        <td>
                            <span t-field="doc.date_end"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Travel</strong>
                        </td>
                        <td>
                            <span t-field="doc.name"/>
                        </td>
                        <td>
                            <strong>Origin</strong>
                        </td>
                        <td>
                            <span t-field="doc.departure_id.name"/>
                        </td>
                        <td>
                            <strong>Destination</strong>
                        </td>
                        <td>
                            <span t-field="doc.arrival_id.name"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </template>

    <template id="travel_instructions_letter_body_template">
        <t t-call="tms.report_pdf_external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=lang)" />
            <t t-as="partner_waybills" t-foreach="doc.waybill_ids">
                <div class="page">
                    <t t-as="partner_notes" t-foreach="doc.route_id.note_ids">
                        <t t-set="partner_way" t-value="partner_waybills.partner_id"/>
                        <t t-set="partner_not" t-value="partner_notes.partner_id"/>

                        <t t-if="partner_not == partner_way">
                            <t t-call="tms.travel_instructions_letter_header_template"/>

                            <div class="list-group">
                                <h5 class="list-group-item-heading">
                                    <span style="color: black; font-weight: bold">Notes: </span>
                                </h5>
                                <div class="list-group-item-text">
                                    <span style="color: black" t-field="partner_notes.notes"/>
                                </div>
                            </div>
                            <div class="list-group">
                                <h5 class="list-group-item-heading">
                                    <span style="font-weight: bold; color: black; ">Rules: </span>
                                </h5>
                                <div class="list-group-item-text">
                                    <span style="color: black" t-field="partner_notes.rules"/>
                                </div>
                            </div>
                        </t>
                    </t>

                    <div class="row">
                        <div class="col-12" style="text-align: center;">
                            <span style="color: black">Kind regards:</span>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <span>_________________________________</span>
                            <br/>
                            <span style="color: black">NATIONAL TRAFFIC</span>
                        </div>
                    </div>

                    <br/>
                    <br/>
                    <br/>

                    <div class="row">
                        <div class="col-6" style="text-align: center;">
                            <span style="color: black">_____________________________</span>
                            <br/>
                            <span style="color: black">Driver Name/Signature</span>
                        </div>
                        <div class="col-6" style="text-align: center;">
                            <span style="color: black">______________________________</span>
                            <br/>
                            <span style="color: black">Unit</span>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
