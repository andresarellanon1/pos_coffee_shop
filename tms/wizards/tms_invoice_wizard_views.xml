<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_invoice_wizard_view_form" model="ir.ui.view">
        <field name="name">Create Invoices</field>
        <field name="model">tms.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice">
                <separator colspan="4" string="Create Customer Invoice from selected Records ?"/>
                <footer>
                    <button name="make_invoices" class="oe_highlight" string="Confirm" type="object"/> or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="tms_fvlf_create_invoice_server_action" model="ir.actions.server">
        <field name="name">Create Customer Invoice</field>
        <field name="model_id" ref="tms.model_fleet_vehicle_log_fuel"/>
        <field name="binding_model_id" ref="tms.model_fleet_vehicle_log_fuel"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action=record.open_invoice_wizard()</field>
    </record>

    <record id="tms_waybill_create_invoice_server_action" model="ir.actions.server">
        <field name="name">Create Customer Invoice</field>
        <field name="model_id" ref="tms.model_tms_waybill"/>
        <field name="binding_model_id" ref="tms.model_tms_waybill"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action=record.open_invoice_wizard()</field>
    </record>
</odoo>
