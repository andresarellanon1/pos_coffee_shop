<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_payment_wizard_view_form" model="ir.ui.view">
        <field name="name">Make Payment</field>
        <field name="model">tms.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Make Payment">
                <group>
                    <group>
                        <field name="journal_id"/>
                        <field name="amount_total"/>
                    </group>
                    <group>
                        <field name="date"/>
                        <field name="notes"/>
                    </group>
                </group>

                <footer>
                    <button name="make_payment" class="oe_highlight" string="Confirm" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="tms_advance_payment_server_action" model="ir.actions.server">
        <field name="name">Make Advance Payment</field>
        <field name="model_id" ref="tms.model_tms_advance"/>
        <field name="binding_model_id" ref="tms.model_tms_advance"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action=record.open_payment_wizard()</field>
    </record>

    <record id="tms_expense_payment_server_action" model="ir.actions.server">
        <field name="name">Make Driver Expense Payment</field>
        <field name="model_id" ref="tms.model_tms_expense"/>
        <field name="binding_model_id" ref="tms.model_tms_expense"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action=record.open_payment_wizard()</field>
    </record>

    <record id="tms_expense_loan_payment_server_action" model="ir.actions.server">
        <field name="name">Make Loan Expense Payment</field>
        <field name="model_id" ref="tms.model_tms_expense_loan"/>
        <field name="binding_model_id" ref="tms.model_tms_expense_loan"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action=record.open_payment_wizard()</field>
    </record>
</odoo>
