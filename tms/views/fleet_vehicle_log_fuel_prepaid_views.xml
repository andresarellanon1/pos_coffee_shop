<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_vehicle_log_fuel_prepaid_view_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.fuel.prepaid.tree</field>
        <field name="model">fleet.vehicle.log.fuel.prepaid</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Prepaid">
                <field name="name"/>
                <field name="operating_unit_id"/>
                <field name="vendor_id"/>
                <field name="product_id"/>
                <field name="price_total"/>
                <field name="balance"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="fleet_vehicle_log_fuel_prepaid_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.fuel.prepaid.form</field>
        <field name="model">fleet.vehicle.log.fuel.prepaid</field>
        <field name="arch" type="xml">
            <form string="Fuel Logs">
                <header>
                    <button class="oe_highlight" icon="fa-check-square-o" name="action_confirm" states="draft" string="Confirm" type="object"/>
                    <button name="create_invoice" states="confirmed" string="Create Invoice" type="object"/>
                    <field name="state" statusbar_visible="draft,confirmed" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="operating_unit_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                            <field name="vendor_id" domain="[('is_company', '=', True)]"
                                context="{'default_supplier': True, 'default_customer': False}"
                                options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>
                            <field name="currency_id" attrs="{'readonly': [('state', 'in', ('confirmed'))]}"
                                options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        </group>
                    </group>
                    <separator/>
                    <group>
                        <group>
                            <field name="product_id" attrs="{'readonly': [('state', 'in', ('confirmed'))], 'required': True}"
                                options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                            <field name="price_total" attrs="{'readonly': [('state', 'in', ('confirmed'))]}" />
                        </group>
                        <group>
                            <field name="balance"/>
                        </group>
                    </group>
                    <group>
                        <notebook colspan="2" states="confirmed">
                            <page string="Fuel Vauchers">
                                <field name="log_fuel_ids" context="{'active_id': active_id, 'active_model': active_model}"
                                    domain="[('operating_unit_id', '=', operating_unit_id), ('vendor_id', '=', vendor_id)]" nolabel="1" colspan="2">
                                    <tree>
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="vendor_id"/>
                                        <field name="operating_unit_id"/>
                                        <field name="travel_id"/>
                                        <field name="product_qty"/>
                                        <field name="price_total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="invoice_id" readonly="1"/>
                                    <field name="invoice_paid" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                    <group>
                        <field colspan="2" name="notes" nolabel="1" placeholder="Write here any other information"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_vehicle_log_fuel_prepaid_action" model="ir.actions.act_window">
        <field name="name">Prepaid</field>
        <field name="res_model">fleet.vehicle.log.fuel.prepaid</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
