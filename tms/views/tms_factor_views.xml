<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tms_factor_view_tree" model="ir.ui.view">
        <field name="name">tms.factor.tree</field>
        <field name="model">tms.factor</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Billing Factors">
                <field invisible="1" name="category"/>
                <field name="name"/>
                <field name="factor_type"/>
                <field name="factor"/>
                <field name="range_start"/>
                <field name="range_end"/>
                <field name="fixed_amount"/>
                <field name="mixed"/>
            </tree>
        </field>
    </record>

    <record id="tms_factor_view_form" model="ir.ui.view">
        <field name="name">tms.factor.form</field>
        <field name="model">tms.factor</field>
        <field name="arch" type="xml">
            <form string="Factors">
                <sheet>
                    <group>
                        <group>
                            <field name="factor_type"/>
                            <field name="name"/>
                            <field name="factor" attrs="{'invisible': [('factor_type', 'in', ('percent_driver', 'travel', 'amount_driver'))],
                                'required': [('factor_type', 'in', ('distance', 'weight', 'qty', 'volume', 'percent'))]}"/>
                            <field name="range_start" attrs="{'invisible': [('factor_type', 'in', ('percent_driver', 'travel', 'percent','amount_driver'))],
                                    'required': [('factor_type', 'in', ('distance', 'weight', 'qty', 'volume'))]}"/>
                            <field name="mixed" attrs="{'invisible': [('factor_type', 'in', ('travel', 'amount_driver'))]}"/>
                            <field name="fixed_amount"/>
                            <field name="notes" colspan="2"/>
                        </group>
                        <group>
                            <field name="category" invisible="True"/>
                            <separator/>
                            <separator/>
                            <field name="range_end" attrs="{'invisible': [('factor_type', 'in', ('percent_driver', 'travel', 'percent', 'amount_driver'))],
                                    'required': [('factor_type', 'in', ('distance', 'weight', 'qty', 'volume'))]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tms_factor_action" model="ir.actions.act_window">
        <field name="name">Factors</field>
        <field name="res_model">tms.factor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
