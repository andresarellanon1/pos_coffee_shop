<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_unit_kit_view_tree" model="ir.ui.view">
        <field name="name">tms.unit.kit.tree</field>
        <field name="model">tms.unit.kit</field>
        <field name="arch" type="xml">
            <tree string="Units Kits">
                <field name="name"/>
                <field name="unit_id"/>
                <field name="trailer1_id"/>
                <field name="dolly_id"/>
                <field name="trailer2_id"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="tms_unit_kit_view_form" model="ir.ui.view">
        <field name="name">tms.unit.kit.form</field>
        <field name="model">tms.unit.kit</field>
        <field name="arch" type="xml">
            <form string="Units Kits">
                <sheet>
                    <group>
                        <h1 colspan="2">
                            <field name="name" class="oe_inline" colspan="2"/>
                        </h1>
                    </group>
                    <group col="4" colspan="4">
                        <separator colspan="4" string="Kit Framework"/>
                        <field name="unit_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="trailer1_id" attrs="{'required':['|', ('dolly_id','!=',False),('trailer2_id','!=',False)]}"
                            domain="[('id','!=',trailer2_id), ('fleet_type','=','trailer')]"
                            options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="dolly_id" attrs="{'required':[('trailer2_id','!=',False)]}" domain="[('fleet_type','=','dolly')]"
                            options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="trailer2_id" attrs="{'required':[('dolly_id', '!=', False)], 'invisible': [('dolly_id', '=', False)]}"
                            domain="[('id', '!=', trailer1_id), ('fleet_type','=','trailer')]"
                            options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="employee_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}" colspan="2"/>
                        <newline/>
                        <separator colspan="4" string="Validity"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="active"/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" placeholder="Share a message..." widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tms_unit_kit_view_search" model="ir.ui.view">
        <field name="name">tms.unit.kit.search</field>
        <field name="model">tms.unit.kit</field>
        <field name="arch" type="xml">
            <search string="Units Kits">
                <field name="name"/>
                <field name="active"/>
                <field name="unit_id"/>
                <field name="trailer1_id"/>
                <field name="dolly_id"/>
                <field name="trailer2_id"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_unit_id" context="{'group_by': 'unit_id'}" string="Unit"/>
                    <filter name="group_by_employee_id" context="{'group_by': 'employee_id'}" string="Driver"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tms_unit_kit_action" model="ir.actions.act_window">
        <field name="name">Units Kits</field>
        <field name="res_model">tms.unit.kit</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': ''}</field>
    </record>
</odoo>
