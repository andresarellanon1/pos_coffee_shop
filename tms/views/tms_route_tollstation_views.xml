<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_route_tollstation_view_tree" model="ir.ui.view">
        <field name="name">tms_route_tollstation.tree</field>
        <field name="model">tms.route.tollstation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="place_id"/>
                <field name="partner_id"/>
                <field name="credit"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="tms_route_tollstation_view_form" model="ir.ui.view">
        <field name="name">tms_route_tollstation.form</field>
        <field name="model">tms.route.tollstation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id" options="{'no_create': True, 'no_create_edit':True, 'no_quick_create':True}"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="place_id" options="{'no_create': True, 'no_create_edit':True, 'no_quick_create':True}"/>
                            <field name="credit"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Cost per Axis">
                            <field name="cost_per_axis_ids">
                                <tree editable="bottom">
                                    <field name="axis"/>
                                    <field name="cost_cash"/>
                                    <field name="cost_credit"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Routes with this Tollstation">
                            <field name="route_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tms_route_tollstation_action" model="ir.actions.act_window">
        <field name="name">Tollstations</field>
        <field name="res_model">tms.route.tollstation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
