<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_extradata_view_tree" model="ir.ui.view">
        <field name="name">tms.extradata.tree</field>
        <field name="model">tms.extradata</field>
        <field name="arch" type="xml">
            <tree string="TMS Waybill Extra Fields">
                <field name="type_id"/>
                <field name="value_extra"/>
            </tree>
        </field>
    </record>

    <record id="tms_extradata_view_form" model="ir.ui.view">
        <field name="name">tms.extradata.form</field>
        <field name="model">tms.extradata</field>
        <field name="arch" type="xml">
            <form string="TMS Extra Fields">
                <group>
                    <field name="type" invisible="1"/>
                    <field name="type_id" options="{'no_quick_create': True}"/>
                    <newline/>
                    <field name="value_extra" invisible="1"/>
                    <field name="value_char" attrs="{'invisible': [('type', '!=', 'char')], 'required': [('type', '=', 'char')]}" />
                    <field name="value_integer" attrs="{'invisible': [('type', '!=', 'integer')], 'required': [('type', '=', 'integer')]}" />
                    <field name="value_float" attrs="{'invisible': [('type', '!=', 'float')], 'required': [('type', '=', 'float')]}" />
                    <field name="value_date" attrs="{'invisible': [('type', '!=', 'date')], 'required': [('type', '=', 'date')]}" />
                    <field name="value_datetime" attrs="{'invisible': [('type', '!=', 'datetime')], 'required': [('type', '=', 'datetime')]}" />
                </group>
            </form>
        </field>
    </record>

    <record id="tms_extradata_action" model="ir.actions.act_window">
        <field name="name">Extra Fields</field>
        <field name="res_model">tms.extradata</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
