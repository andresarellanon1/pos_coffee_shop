<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_place_view_tree" model="ir.ui.view">
        <field name="name">tms.place.tree</field>
        <field name="model">tms.place</field>
        <field name="arch" type="xml">
            <tree string="Places">
                <field name="complete_name"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="latitude"/>
                <field name="longitude"/>
            </tree>
        </field>
    </record>

    <record id="tms_place_view_form" model="ir.ui.view">
        <field name="name">tms.place.form</field>
        <field name="model">tms.place</field>
        <field name="arch" type="xml">
            <form string="Places">
                <header>
                    <button name="get_coordinates" string="Get Coords from Google" type="object"/>
                    <button name="open_in_google" string="View in Google Maps" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" select="1"/>
                            <field name="state_id" select="1" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                            <field name="country_id" readonly="1" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        </group>
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tms_place_action" model="ir.actions.act_window">
        <field name="name">Places</field>
        <field name="res_model">tms.place</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
