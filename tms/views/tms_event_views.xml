<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_event_view_tree" model="ir.ui.view">
        <field name="name">Travel Events</field>
        <field name="model">tms.event</field>
        <field name="arch" type="xml">
            <tree string="Travel Events">
                <field name="date"/>
                <field name="name"/>
                <field name="position_real"/>
                <field name="position_pi"/>
                <field name="notes"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="tms_event_view_form" model="ir.ui.view">
        <field name="name">Travel Event</field>
        <field name="model">tms.event</field>
        <field name="arch" type="xml">
            <form string="Travel Event">
                <header>
                    <field name="state" statusbar_visible="draft,confirm,cancel" widget="statusbar"/>
                    <button icon="fa-times" name="action_cancel" states="draft,confirm" string="Cancel" type="object"/>
                    <button icon="fa-reply" name="set_2_draft" states="cancel" string="Set to Draft" type="object"/>
                    <button class="oe_highlight" icon="fa-check-square-o" name="action_confirm" states="draft" string="Confirm" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="travel_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <group string="GPS">
                        <group>
                            <field name="latitude"/>
                            <field name="position_real"/>
                        </group>
                        <group>
                            <field name="longitude"/>
                            <field name="position_pi"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tms_event_view_search" model="ir.ui.view">
        <field name="name">tms.event.search</field>
        <field name="model">tms.event</field>
        <field name="arch" type="xml">
            <search string="Travel Events">
                <field name="name"/>
                <field name="date"/>
            </search>
        </field>
    </record>
</odoo>
