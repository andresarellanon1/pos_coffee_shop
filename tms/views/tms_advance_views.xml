<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_advance_view_tree" model="ir.ui.view">
        <field name="name">tms.advance.tree</field>
        <field name="model">tms.advance</field>
        <field name="arch" type="xml">
            <tree string="Advances" decoration-info="state == 'confirmed'" decoration-success="state == 'approved'" decoration-danger="state =='draft'"
                decoration-muted="state=='cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="travel_id"/>
                <field name="unit_id"/>
                <field name="employee_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="amount" widget="monetary" sum="Amount Total"/>
                <field name="product_id"/>
                <field name="auto_expense"/>
                <field name="paid"/>
                <field name="state"/>
                <button icon="gtk-go-forward" name="action_approve" states="draft" string="Approve" type="object"/>
                <button icon="gtk-goto-last" name="action_confirm" states="approved" string="Confirm" type="object"/>
            </tree>
        </field>
    </record>

    <record id="tms_advance_view_form" model="ir.ui.view">
        <field name="name">tms.advance.form</field>
        <field name="model">tms.advance</field>
        <field name="arch" type="xml">
            <form string="Advances">
                <header>
                    <button name="action_cancel_draft" icon="fa-reply" states="cancel" string="Set to Draft" type="object"/>
                    <button name="action_cancel" icon="fa-times" states="draft,approved,confirmed" string="Cancel" type="object"/>
                    <button name="action_approve" icon="fa-thumbs-up" class="oe_highlight" states="draft" string="Approve" type="object"/>
                    <button name="action_confirm" icon="fa-check-square-o" class="oe_highlight" states="approved" string="Confirm" type="object"/>
                    <button name="action_authorized" icon="fa-key" string="To authorize advance" type="object" class="oe_highlight" states="authorized"/>
                    <field name="state" statusbar_visible="draft,approved,authorized,confirmed,cancel,closed" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field class="oe_inline" name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="operating_unit_id" attrs="{'readonly':[('state','in',('confirmed','cancel','closed'))]}"
                                options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                            <field name="travel_id" attrs="{'readonly':[('state','in',('cancel','closed','confirmed'))]}"
                                domain="[('state','!=','cancel'),('state','!=','closed'),('operating_unit_id', '=', operating_unit_id)]"
                                options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                            <field name="unit_id"
                                options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                            <field name="employee_id"
                                options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', 'in', ('confirmed', 'cancel', 'closed'))]}"/>
                            <field name="currency_id" attrs="{'readonly': [('state', 'in', ('confirmed', 'cancel', 'closed'))]}"
                                groups="base.group_multi_currency"/>
                            <field name="auto_expense" attrs="{'readonly': [('state', 'in', ('confirmed', 'cancel', 'closed'))]}" />
                        </group>
                    </group>
                    <separator/>
                    <group>
                        <group>
                            <field name="product_id" attrs="{'readonly':[('state','in',('confirmed','cancel','closed'))]}"/>
                            <field name="amount" options="{'currency_field': 'currency_id'}" widget="monetary"
                                attrs="{'readonly':[('state','in',('confirmed','cancel','closed'))]}"/>
                        </group>
                    </group>
                    <group>
                        <notebook colspan="2">
                            <page string="Notes">
                                <group>
                                    <field colspan="2" name="notes" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Log Info">
                                <group>
                                    <group>
                                        <field name="move_id"/>
                                        <field name="expense_id"/>
                                    </group>
                                    <group>
                                        <field name="paid"/>
                                        <field name="payment_move_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" placeholder="Share a message..." widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tms_advance_view_search" model="ir.ui.view">
        <field name="name">tms.advance.search</field>
        <field name="model">tms.advance</field>
        <field name="arch" type="xml">
            <search string="Advances">
                <filter name="filter_state_draft" domain="[('state', '=', 'draft')]" string="Draft"/>
                <filter name="filter_state_approved" domain="[('state', '=', 'approved')]" string="Approved"/>
                <filter name="filter_state_confirmed" domain="[('state', '=', 'confirmed')]" string="Confirmed"/>
                <filter name="filter_state_closed" domain="[('state', '=', 'closed')]" string="Closed"/>
                <filter name="filter_state_cancel" domain="[('state', '=', 'cancel')]" string="Cancelled"/>
                <filter name="filter_paid" domain="[('paid', '=', True)]" string="Paid"/>
                <filter name="filter_not_paid" domain="[('paid', '=', False)]" string="Not Paid"/>
                <filter name="filter_this_month" domain="[('date', '&gt;=', time.strftime('%Y-%m-01'))]" string="From this month"/>
                <field name="date"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="state"/>
                <filter name="group_by_travel_id" context="{'group_by': 'travel_id'}" string="Travel"/>
                <filter name="group_by_unit_id" context="{'group_by': 'unit_id'}" string="Unit"/>
                <filter name="group_by_employee_id" context="{'group_by': 'employee_id'}" string="Driver"/>
                <filter name="group_by_state" context="{'group_by': 'state'}" string="State"/>
                <filter name="group_by_date" context="{'group_by': 'date'}" string="Period"/>
                <filter name="group_by_date_day" context="{'group_by': 'date:day'}" string="Day"/>
                <filter name="group_by_operating_unit_id" context="{'group_by': 'operating_unit_id'}" string="Operating Unit"/>
            </search>
        </field>
    </record>

    <record id="tms_advance_action" model="ir.actions.act_window">
        <field name="name">Advances</field>
        <field name="res_model">tms.advance</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
