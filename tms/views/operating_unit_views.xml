<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherited_operating_unit_tms_view_form" model="ir.ui.view">
        <field name="name">Operating Unit</field>
        <field name="model">operating.unit</field>
        <field name="inherit_id" ref="operating_unit.view_operating_unit_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']" position="after">
                <group>
                    <field name="credit_limit"/>
                </group>
                <group>
                    <group string="Sequences for Freights">
                        <field name="travel_sequence_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="expense_sequence_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="waybill_sequence_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="advance_sequence_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="fuel_log_sequence_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="loan_sequence_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="prepaid_fuel_sequence_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                    </group>
                    <group string="Journals for Freights">
                        <field name="advance_journal_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="expense_journal_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="sale_journal_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="purchase_journal_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                        <field name="loan_journal_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                    </group>
                    <group string="Products for Freights">
                        <field name="ieps_product_id" options="{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
