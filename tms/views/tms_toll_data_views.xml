<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tms_toll_data_tree" model="ir.ui.view">
        <field name="name">tms.toll.data.tree</field>
        <field name="model">tms.toll.data</field>
        <field name="arch" type="xml">
            <tree string='Toll Data' create="0" edit="0" decoration-success="state=='open'" decoration-danger="state == 'closed'">
                <field name="name" readonly="1"/>
                <field name="num_tag" readonly="1"/>
                <field name="economic_number" readonly="1"/>
                <field name="date" readonly="1"/>
                <field name="import_rate" readonly="1"/>
                <field name="create_date" readonly="1"/>
                <field name="state" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="tms_toll_data_view_search" model="ir.ui.view">
        <field name="name">tms.toll.data.search</field>
        <field name="model">tms.toll.data</field>
        <field name="arch" type="xml">
            <search string="Toll data">
                <filter name="filter_state_open" domain="[('state', '=', 'open')]" string="Open"/>
                <filter name="filter_state_closed" domain="[('state', '=', 'closed')]" string="Closed"/>
                <field name="name"/>
                <field name="num_tag" string="Unit"/>
                <field name="economic_number"/>
                <field name="date"/>
                <field name="import_rate"/>
            </search>
        </field>
    </record>

    <record id="tms_toll_data_action" model="ir.actions.act_window">
        <field name="name">IAVE Tollstation Data</field>
        <field name="res_model">tms.toll.data</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
