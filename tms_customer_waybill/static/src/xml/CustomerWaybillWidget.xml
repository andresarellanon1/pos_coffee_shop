<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<t t-name="tms_customer_waybill.CustomerWaybillWidget" owl="1">
    <table class="w-full h-auto border p-2">
        <thead>
            <tr>
                <th t-foreach="state.headers" t-as="header" t-key="header.key">
                    <t t-esc="header.displayName"/>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr t-foreach="state.items" t-as="item" t-key="item.id">
                <td t-foreach="state.headers" t-as="header" t-key="header.key">
                    <t t-esc="item[header.key]"/>
                </td> 
                <td t-foreach="item.actions" t-as="action" t-key="action.name">
                    <button type="button" class="btn-primary" t-on-click="() => action.callback()">
                        <t t-esc="action.name"/>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</t>
</templates>
