<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<t t-name="tms_customer_waybill.CustomerWaybillWidget" owl="1">
    <table class="w-full h-auto border p-2">
        <thead>
            <tr>
                <th t-foreach="state.headers" t-as="header" t-key="header">
                    <t t-esc="header"/>
                </th>
                <th t-foreach="state.actions" t-as="action" t-key="action">
                    <t t-esc="action.name"/>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr t-foreach="state.items" t-as="item" t-key="item.id">
                <td t-foreach="Object.keys(item)" t-as="key" t-key="key">
                    <t t-esc="item[key]"/>
                </td> 
                <td t-foreach="state.actions" t-as="action" t-key="action">
                    <button type="button" class="p-2 flex items-center justify-center text-center border rounded" t-on-click="() => this.rpcActionCall(action.id)">
                        <t t-esc="action.name"/>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</t>
</templates>
