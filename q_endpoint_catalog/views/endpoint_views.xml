<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="q_endpoint_list_view" model="ir.ui.view">
        <field name="name">q_endpoint.list.view</field>
        <field name="model">q_endpoint_catalog.q_endpoint</field>
        <field name="arch" type="xml">
            <tree string="Q Endpoint List">
                <field name="name" />
                <field name="url" />
                <field name="method" />
            </tree>
        </field>
    </record>

    <record id="q_endpoint_form_view" model="ir.ui.view">
        <field name="name">q_endpoint.form.view</field>
        <field name="model">q_endpoint_catalog.q_endpoint</field>
        <field name="arch" type="xml">
            <form string="REST Endpoint">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="url" />
                        <field name="method" />
                        <field name="body" widget="one2many_list" />
                        <field name="response" widget="one2many_list" />
                        <field name="headers" widget="one2many_list" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="q_endpoint_kanban_view" model="ir.ui.view">
        <field name="name">q_endpoint.kanban.view</field>
        <field name="model">q_endpoint_catalog.q_endpoint</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content">
                            <div class="oe_kanban_header">
                                <strong>
                                    <field name="name" />
                                </strong>
                                <br />
                                <span>
                                    <field name="method" />
                                </span>
                            </div>
                            <div class="oe_kanban_details">
                                <p>
                                    <field name="url" />
                                </p>
                                <div class="oe_kanban_bottom_left">
                                    <field name="headers" widget="statinfo"
                                        options="{'mode': 'count'}" />
                                    <field name="response" widget="statinfo"
                                        options="{'mode': 'count'}" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="q_endpoint_catalog_menu_action" model="ir.actions.act_window">
        <field name="name">REST Endpoint Catalog</field>
        <field name="res_model">q_endpoint_catalog.q_endpoint</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="q_endpoint_list_view" />
    </record>

    <menuitem id="menu_q_endpoint" name="QEndpoint"
        action="q_endpoint_catalog_menu_action" sequence="10"
        web_icon="q_endpoint_catalog,static/description/icon.png" />
    <menuitem id="menu_q_endpoint_response_list" name="Response Attributes"
        parent="menu_q_endpoint" action="action_q_endpoint_response_list" sequence="10" />
    <menuitem id="menu_q_endpoint_request_body_list" name="Request Body"
        parent="menu_q_endpoint" action="action_q_endpoint_request_body_list" sequence="20" />
    <menuitem id="menu_q_endpoint_headers_list" name="Headers" parent="menu_q_endpoint"
        action="action_q_endpoint_headers_list" sequence="30" />

</odoo>
