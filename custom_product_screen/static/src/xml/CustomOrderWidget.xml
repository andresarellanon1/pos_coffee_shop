<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_product_screen.CustomOrderWidget" 
        owl="1" >
    <div class="order">
        <t t-if="_orderlinesArray.length === 0">
            <div class="order-empty">
                <h1> Sin registros</h1>
            </div>
        </t>
        <t t-else="">
            <ul class="orderlines">
                <t t-foreach="_orderlinesArray" t-as="orderline" t-key="orderline.id">
                    <Orderline line="orderline" />
                </t>
            </ul>
            <div class="form-control-row">
                <OrderSummary order="order"/>
                <div class="form-control-col">
                <button class="" t-on-click="() => this.trigger('clear-order')" >
                    Cancelar 
                </button>
                <button class="" t-on-click="() => this.trigger('click-send')" >
                    Terminar pedido
                </button>
            </div>
        </div>
    </div>
   </t>
</templates> 
