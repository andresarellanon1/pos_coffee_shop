<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_product_screen.CustomOrderWidget" 
        owl="1" >
    <div class="order">
        <t t-if="_orderlinesArray.length === 0">
            <div class="order-empty">
                <t t-if="isEmployee">
                        Sin registros 
                </t>
                <t t-else="">
                    <button t-on-click="() => this.trigger('click-sync-next-order')">
                           Sincronizar siguiente 
                    </button>
                </t>
            </div>
        </t>
        <t t-else="">
            <ul class="orderlines">
                <t t-foreach="_orderlinesArray" t-as="orderline" t-key="orderline.id">
                    <Orderline line="orderline" />
                </t>
            </ul>
            <div class="form-control-row">
                <div  class="d-flex flex-row  p-2">
                    <OrderSummary order="order"/>
                        <div class="d-flex align-items-end flex-column p-2">
                        <button class="p-3 mb-2 bg-danger text-white rounded" t-on-click="() => this.trigger('clear-order')">
                            Cancelar 
                        </button>
                        
                        <t t-if="isEmployee">
                            <button class="p-3 mb-2 bg-success text-white rounded" t-on-click="() => this.trigger('click-pay')">
                                Terminar pedido
                            </button>
                        </t>
                        <t t-else="" >
                            <button  class="p-3 mb-2 bg-success text-white rounded" t-on-click="() => this.trigger('click-send')">
                                Terminar pedido
                            </button>
                        </t>
                        </div>
                </div>       
            </div>
        </t>
    </div>
   </t>
</templates> 
