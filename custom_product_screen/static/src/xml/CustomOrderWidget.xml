<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_product_screen.CustomOrderWidget" 
        owl="1" >
    <div class="order">
        <t t-if="_orderlinesArray.length === 0">
            <div class="order-empty">
                <h1> Sin registros</h1>
            </div>
        </t>
        <t t-else="">
            <ul class="orderlines">
                <t t-foreach="_orderlinesArray" t-as="orderline" t-key="orderline.id">
                    <Orderline line="orderline" />
                </t>
            </ul>
            <div class="form-control-row">
                <div class="form-control-padding form-control-col justify-end">
                    <OrderSummary order="order"/>
                    <div class="form-control-col">
                        <button  class="form-control-row" t-on-click="() => this.trigger('clear-order')">
                            Cancelar 
                        </button>
                        <t t-if="isEmployee">
                            <button  class="form-control-row" t-on-click="() => this.trigger('click-pay')">
                                Terminar pedido
                            </button>
                        </t>
                        <t t-else="">
                            <button  class="form-control-row" t-on-click="() => this.trigger('click-send')">
                                Terminar pedido
                            </button>
                        </t>
                    </div>
                </div>       
            </div>
        </t>
    </div>
   </t>
</templates> 
