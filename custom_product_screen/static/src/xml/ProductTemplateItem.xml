<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="custom_product_screen.ProductTemplateItem" owl="1">
		<article class="col bg-white btn btn-light d-flex flex-column justify-content-center align-items-center" tabindex="0" t-on-click="() => this.trigger('click-product', props.product)" t-att-data-product-id="props.product.id" t-attf-aria-labelledby="article_product_{{props.product.id}}">
			<div class="">
				<img t-att-src="imageUrl" t-att-alt="props.product.display_name" />
			</div>
			<div class="" t-attf-id="article_product_{{props.product.id}}">
				<t t-esc="props.product.display_name" />
			</div>
		</article>
	</t>
</templates>
