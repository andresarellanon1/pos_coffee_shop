<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductSpawnerScreen" owl="1">
            <div class="popup popup-text popup-med product-configurator-popup">
                <header class="title">
                    <t t-esc="props.product.display_name" />
                </header>

                <main class="body product_configurator_attributes col-lg-4 col-md-6 col-sm-12">
                    <ProductSpawnerWidget t-if="attribute.display_type === 'pills'" attributes="props.attributes"/>
                </main>

                <footer class="footer">
                    <div t-if="isSpanwed" class="button highlight confirm" t-on-click="confirm">
                        Agregar
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Cencelar
                    </div>
                </footer>
            </div>
    </t>
</templates>
