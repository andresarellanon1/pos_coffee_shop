<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="custom_product_screen.CustomRadioProductAttribute" owl="1">
		<div class="d-grid d-flex gap-1 justify-content-between align-items-center">
			<div t-foreach="values" t-as="value" t-key="value.id" class="d-flex justify-content-center align-items-stretch flex-grow-1">
				<label t-attf-for="{{ attribute.id }}_{{ value.id }}" class="btn d-flex font-bold checkmark-container py-2 border rounded justify-content-center algin-items-center h-100 w-100">
					<input type="radio" t-model="state.selected_value" t-on-click="($event) => this.setChecked($event)" t-att-name="attribute.id" t-attf-id="{{ attribute.id }}_{{ value.id }}" t-att-value="value.id" />
					<t t-esc="value.name" />
					<t t-if="value.price_extra">
						<label t-attf-for="{{ attribute.id }}_{{ value.id }}">
							<span class="price_extra">
								+
								<t t-esc="env.pos.format_currency(value.price_extra)" />
							</span>
						</label>
					</t>
				</label>
			</div>
		</div>
	</t>
</templates>
