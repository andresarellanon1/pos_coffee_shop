<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="custom_product_screen.ExtraItem" owl="1">
		<div t-attf-id="extra_item_{{props.extra.id}" class="d-flex flow-grow-1 w-100 justify-content-between align-items-center pt-2">
			<t t-esc="props.extra.display_name" />
			<div class="d-flex grid gap-2 justify-content-between align-items-center">
				<div class="btn" t-on-click="() => this.removeExtra()">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-dash-circle-fill" viewBox="0 0 16 16">
						<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7z" />
					</svg>
				</div>
				<div class="d-flex">
					<t t-esc="getCount" />
					($
					<t t-esc="getPriceExtra" />
					)
				</div>
				<div class="btn" t-on-click="() => this.addExtra()">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
						<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
					</svg>
				</div>
			</div>
		</div>
	</t>
</templates>
