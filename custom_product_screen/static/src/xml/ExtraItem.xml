
<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="custom_product_screen.ExtraItem" owl="1" >
        <div class="form-control-row" t-attf-id="extra_item_{{props.extra.id}}">
            <div class="form-control">
                <t t-esc="props.extra.display_name"/>
            </div>
            <div class="form-control">
                <button t-on-click="() => this.removeExtra()"> - </button>
            </div>
            <div class="form-control">
                <t t-esc="getCount" />
            </div>
            <div class="form-control">
            <button t-on-click="() => this.addExtra()"> + </button>    
            </div>
            <div class="form-control">
            <span>($<t t-esc="getPriceExtra"/>)</span>
            </div>
        </div>
    </t>
    
</templates>
