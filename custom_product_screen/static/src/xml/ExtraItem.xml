<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="custom_product_screen.ExtraItem" owl="1">
		<div t-attf-id="extra_item_{{props.extra.id}" class="container-fluid d-flex justify-content-between align-items-center mt-0 mb-0">
			<h6 class="d-flex w-100">
				<t t-esc="props.extra.display_name" />
				<t t-esc="env.pos.format_currency(getPriceExtra)" />
			</h6>
			<div class="d-flex w-auto grid gap-1 justify-content-end align-items-center ">
				<div class="btn" t-on-click="() => this.removeExtra()">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="green" class="bi bi-dash-circle-fill" viewBox="0 0 16 16">
						<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7z" />
					</svg>
				</div>
				<h6 class="d-flex h-100 justify-content-center align-items-center row m-0">
					<t t-esc="getCount" />
				</h6>
				<div class="btn" t-on-click="() => this.addExtra()">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="green" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
						<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
					</svg>
				</div>
			</div>
		</div>
	</t>
</templates>
