<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="custom_product_screen.ExtraItem" owl="1">
		<div t-attf-id="extra_item_{{props.extra.id}" class="flex-grow-1 d-flex w-100 justify-content-center align-items-center pt-2">
			<div class="">
				<t t-esc="props.extra.display_name" />
			</div>
			<div class="btn btn-success rounded-circle " t-on-click="() => this.removeExtra()">
				-
			</div>
			<div class="px-2">
				<t t-esc="getCount" />
			</div>
			<div class="btn btn-success rounded-circle" t-on-click="() => this.addExtra()">
				+
			</div>
			<div class="pl-2" >
				<t t-esc="getPriceExtra" />
			</div>
		</div>
	</t>
</templates>
