<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_product_screen.ExtraItem" owl="1" >
        <div class="form-control-row form-control-padding" t-attf-id="extra_item_{{props.extra.id}}">
                <div class="form-control border-0">
                    <t t-esc="props.extra.display_name"/>
                </div>
                <div class="">
                    <button class="rounded-circle bg-success text-white" t-on-click="() => this.removeExtra()"> - </button>
                </div>
                <div class="count-wrapper">
                    <t t-esc="getCount" />
                </div>
                <div class="">
                <button class="rounded-circle bg-success text-white" t-on-click="() => this.addExtra()"> + </button>    
                </div>
                <div class="form-control border-0 price-wrapper">
                <span>($<t t-esc="getPriceExtra"/>)</span>
                </div>
            
            </div>
    </t>
    
</templates>
