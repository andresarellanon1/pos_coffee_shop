<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="custom_product_screen.ExtraItem" owl="1">
		<div t-attf-id="extra_item_{{props.extra.id}" class="flex-grow-1 d-flex w-100 justify-content-center align-items-center pt-2">
			<div class="fs-7 flex-fill label">
				<t t-esc="props.extra.display_name" />
			</div>
			<button class="btn btn-success rounded-full" t-on-click="() => this.removeExtra()">
				-
			</button>
			<div class="fs-6 px-2">
				<t t-esc="getCount" />
			</div>
			<button class="btn btn-success rounded-full" t-on-click="() => this.addExtra()">
				+
			</button>
			<div class="border-0 fs-7" >
				<span>
					($
					<t t-esc="getPriceExtra" />
					)
				</span>
			</div>
		</div>
	</t>
</templates>
