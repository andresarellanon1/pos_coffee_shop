<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="custom_product_screen.ProductTemplateScreen" owl="1" >
            <div class="product-screen screen" t-att-class="{ oe_hidden: !props.isShown }">
                <div class="screen-full-width">
                    <div class="leftpane pane-border">
                        <CustomOrderWidget/>
                        <div class="form-control-col justify-end">
                            <button t-on-click="() => this.trigger('clear-order')" >
                               Cancelar 
                            </button>
                            <button t-on-click="() => this.trigger('click-pay')" >
                              Terminar pedido
                            </button>
                        </div>
                    </div>
                    <div class="rightpane">
                        <ProductTemplateWidget />
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
