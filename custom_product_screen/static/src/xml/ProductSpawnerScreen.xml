<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="custom_product_screen.ProductSpawnerScreen" owl="1">
		<div class="container-fluid h-100">
			<div class="row d-flex h-100">
				<div class="col-4 sm-col-2 h-100 d-flex flex-column border-end match_bg">
					<CustomOrderWidget />
				</div>
				<div class="col-8 sm-col-10 h-100 d-flex flex-column border-end match_bg px-2">
					<div class="container-fluid">
						<div class="d-flex pt-2 w-100 h-auto">
							<img class="mr-3 border rounded" height="80px" width="80px" t-att-src="imageUrl"  />
							<div class="media-body px-2">
								<h6 class="mt-0 mb-0">
									<t t-esc="props.product.display_name"/>
									$<t t-esc="props.product.list_price" />
								</h6>
							</div>
						</div>
						<div class="row flex-grow align-items-center">
							<div t-foreach="props.attributes" t-as="attribute" t-key="attribute.id">
								<div class="" t-esc="attribute.name" />
								<CustomRadioProductAttribute attribute="attribute" />
							</div>
						</div>
						<div class="row justify-content-center">
							<div class="col-6 d-flex flex-column justify-content-start align-items-stretch">
								<t t-foreach="getDisplayExtras" t-as="extra" t-key="extra.id" t-as-index="index">
									<t t-if="extra_index%2 === 0">
										<div class="row justify-content-center">
											<ExtraItem extra="extra" />
										</div>
									</t>
								</t>
							</div>
							<div class="col-6 d-flex flex-column justify-content-start align-items-stretch">
								<t t-foreach="getDisplayExtras" t-as="extra" t-key="extra.id">
									<t t-if="extra_index%2 !== 0">
										<div class="row justify-content-center">
											<ExtraItem extra="extra" />
										</div>
									</t>
								</t>
							</div>
						</div>
					</div>
					<div class="container-fluid h-100 pt-2 pb-2">
						<ProductSpawnerActionpad />
					</div>
				</div>
			</div>
		</div>
	</t>
</templates>
