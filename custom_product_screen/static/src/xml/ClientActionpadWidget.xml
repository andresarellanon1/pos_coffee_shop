<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_product_screen.ClientActionpadWidget" 
        owl="1" >
        <div class="flex-row-reverse">
            <button class="p-3 mb-2 bg-danger text-white rounded" t-on-click="() => this.trigger('close-temp-screen')">
               Cancelar
            </button>
            <button class="p-3 mb-2 bg-success text-white rounded" t-on-click="() => this.trigger('spawn-product')">
                Aceptar
            </button>
        </div>
   </t>
</templates> 
