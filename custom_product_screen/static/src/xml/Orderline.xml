<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
	<t t-name="Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
		<xpath expr="//li[hasclass('orderline')]" position="replace">
			<div class="container-fluid w-100 d-flex flex-column justify-content-start align-items-center flex-grow-1 ">
				<div class="fw-bold d-flex w-100 justify-content-between" t-attf-id="article_product_{{props.line.product.id}}">
					<span class="text-xl">
						<t t-esc="props.line.product.display_name" />
					</span>
					<span>
						<t t-esc="env.pos.format_currency(props.line.get_price_with_tax())" />
					</span>
					<span class="btn btn-danger w-6 h-6">
					X	
					</span>
				</div>
				<div class="d-flex grid gap-1 w-100 justify-content-between p-0">
					<img class="border rounded" width="80px" height="80px" t-att-src="imageUrl" t-att-alt="props.line.product.display_name" />
					<div class="d-flex flex-grow-1 flex-column jutify-content-start align-items-start p-0">
						<t t-foreach="childOrderlines" t-as="cline" t-key="cline.id">
							<div class="col-12 d-flex w-100 justify-content-between" t-att-data-orderline-id="cline.id">
								<span>
									<t t-esc="cline.product.display_name" />
									(
									<t t-esc="cline.quantity" />
									)
								</span>
								<span>
									<!-- 									<t
									t-esc="env.pos.format_currency(cline.get_display_price())" /> -->
								</span>
							</div>
						</t>
					</div>
				</div>
			</div>
		</xpath>
	</t>
</templates>
